<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb">
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 首页</a>
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> 问卷配置</a>
        </div>
    </div>
    <!--End-breadcrumbs-->

    <!--Action boxes-->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span5">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>问卷信息</h5>
                    </div>
                    <div id="questionContainer" class="widget-content" style="height: 200px;">
                        <form class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label">标题</label>
                                <div class="controls">
                                    <strong style="padding-top: 4px;display: inline-block;">$!vo.title</strong>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">开始时间</label>
                                <div class="controls">
                                    <span style="padding-top: 4px;display: inline-block;">$!dateTool.format('yyyy-MM-dd',$!vo.startTime)</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">结束时间</label>
                                <div class="controls">
                                    <span style="padding-top: 4px;display: inline-block;">$!dateTool.format('yyyy-MM-dd',$!vo.endTime)</span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="span7">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>已选择试题</h5>
                    </div>
                    <div id="questionContainer" class="widget-content" style="max-height: 200px; overflow-y: auto">
                        <table class="table table-bordered data-table">
                            <thead>
                            <tr>
                                <th>标题</th>
                                <th>类型</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>了开始就关联商家端给谁看垃圾广告</td>
                                    <td>
                                        单选题
                                    </td>
                                    <td><a class="btn btn-danger">移除</a></td>
                                </tr>
                                <tr>
                                    <td>了开始就关联商家端给谁看垃圾广告</td>
                                    <td>
                                        单选题
                                    </td>
                                    <td><a class="btn btn-danger">移除</a></td>
                                </tr>
                                <tr>
                                    <td>了开始就关联商家端给谁看垃圾广告</td>
                                    <td>
                                        单选题
                                    </td>
                                    <td><a class="btn btn-danger">移除</a></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                        <h5>试卷列表</h5>
                    </div>
                    <div class="widget-content">
                        <table class="table table-bordered data-table">
                            <thead>
                            <tr>
                                <th>标题</th>
                                <th>类型</th>
                                <th>选项</th>
                                <th>修改时间</th>
                                <th>创建时间</th>
                            </tr>
                            </thead>
                            <tbody id="questionTbody">
                                #foreach($!ques in $!questions)
                                <tr>
                                    <td>$!ques.title</td>
                                    <td>
                                        #if($!ques.mode == 1)
                                            单选题
                                        #elseif($!ques.mode == 2)
                                            多选题
                                        #else
                                            问答题
                                        #end

                                    </td>
                                    <td>
                                        #if($!ques.mode == 3)
                                            --
                                        #else
                                            $!ques.options
                                        #end

                                    </td>
                                    <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss',$!ques.updateTime)</td>
                                    <td>$!dateTool.format('yyyy-MM-dd HH:mm:ss',$!ques.createTime)</td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
